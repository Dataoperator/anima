{
  "canisters": {
    "anima": {
      "type": "rust",
      "package": "anima",
      "candid": "src/lib.did",
      "declarations": {
        "node_compatibility": true
      },
      "settings": {
        "memory_allocation": "4GB",
        "compute_allocation": "1",
        "reserved_cycles": "30000000000000",
        "freezing_threshold": "5184000",
        "controllers": ["principal"],
        "build": {
          "args": "--release --features quantum_optimization",
          "target": "wasm32-unknown-unknown"
        }
      }
    },
    "anima_assets": {
      "type": "assets",
      "source": ["dist"],
      "dependencies": ["anima"],
      "settings": {
        "memory_allocation": "2GB",
        "compute_allocation": "0.5",
        "reserved_cycles": "10000000000000",
        "freezing_threshold": "5184000"
      }
    },
    "payment_verification": {
      "type": "rust",
      "package": "payment_verification",
      "candid": "candid/payment_verification.did",
      "declarations": {
        "node_compatibility": true
      },
      "settings": {
        "memory_allocation": "2GB",
        "compute_allocation": "0.5",
        "reserved_cycles": "15000000000000",
        "freezing_threshold": "5184000"
      }
    },
    "ledger": {
      "type": "custom",
      "candid": "candid/ledger.did",
      "wasm": "local_ledger.wasm",
      "declarations": {
        "node_compatibility": true,
        "output": "src/declarations/ledger"
      },
      "env": {
        "LEDGER_ARCHIVE_NODE": "local",
        "LEDGER_MINTER_ACCOUNT_ID": "test_minter",
        "LEDGER_INIT_ARGS": "{ \"minting_account\": \"test_minter\", \"initial_values\": [], \"send_whitelist\": [], \"transfer_fee\": [200_000] }"
      }
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:8000",
      "type": "ephemeral"
    },
    "staging": {
      "providers": ["https://icp0.io"],
      "type": "persistent"
    },
    "ic": {
      "providers": ["https://icp0.io"],
      "type": "persistent",
      "canisters": {
        "ledger": {
          "id": "ryjl3-tyaaa-aaaaa-aaaba-cai"
        }
      }
    }
  },
  "defaults": {
    "build": {
      "packtool": "",
      "args": ""
    }
  },
  "debug": {
    "enable_profiling": true,
    "log_level": "info",
    "logging_enabled": true
  },
  "version": 1
}