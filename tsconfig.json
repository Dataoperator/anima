{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@components/*": ["components/*"],
      "@declarations/*": ["declarations/*"]
    },
    "noImplicitAny": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "types": [
      "node",
      "react",
      "react-dom",
      "jest",
      "testing-library__jest-dom",
      "aria-query",
      "babel__core",
      "babel__generator",
      "babel__template",
      "babel__traverse",
      "d3-array",
      "d3-color",
      "d3-ease",
      "d3-interpolate",
      "d3-path",
      "d3-scale",
      "d3-shape",
      "d3-time",
      "d3-timer",
      "estree",
      "graceful-fs",
      "istanbul-lib-coverage",
      "istanbul-lib-report",
      "istanbul-reports",
      "jsdom"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    ".dfx",
    "**/*.js",
    "**/*.jsx",
    "src/declarations/**/*.js"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}